<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/my_prod_card"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/my_prod_icon_img"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/pic"
                >
            </ImageView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <ImageButton
                    android:id="@+id/options"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/options"
                    android:background="#FFF"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="5dp"
                    >
                </ImageButton>

                <TextView
                    android:id="@+id/my_prod_name"
                    android:layout_marginTop="22dp"
                    android:layout_width="match_parent"
                    android:text="Hellow"
                    android:layout_height="wrap_content">
                </TextView>

                <TextView
                    android:layout_below="@+id/my_prod_name"
                    android:id="@+id/my_prod_des"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:text="Hellow"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_below="@id/my_prod_des"
                    android:id="@+id/my_prod_price"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:inputType="number"
                    android:text="Hellow"
                    android:layout_height="wrap_content">
                </TextView>
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>