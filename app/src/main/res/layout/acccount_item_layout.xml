<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginStart="7dp"
    android:layout_marginEnd="7dp"
    app:cardCornerRadius="6dp"
    app:cardMaxElevation="1dp"
    app:cardElevation="1dp"
    android:id="@+id/account_card"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="25dp"
            android:id="@+id/setting_acc_text"
            android:textStyle="bold"
            android:textColor="#000"
           android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:textAlignment="center"
            android:layout_alignEnd="@id/setting_acc_text"/>
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/left_acc_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="7dp"
            android:src="@drawable/ic_action_setting"
            />
        <ImageView
            android:id="@+id/right_acc_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/right_angle_setting"
            android:layout_alignEnd="@id/setting_acc_text"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
