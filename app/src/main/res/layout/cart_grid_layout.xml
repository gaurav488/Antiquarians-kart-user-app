<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cart_card"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/cart_icon_img"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/pic"
            >
        </ImageView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
          >
            <TextView
                android:id="@+id/cart_prod_name"
                android:layout_marginTop="22dp"
                android:layout_width="match_parent"
                android:text="Hellow"
                android:layout_height="wrap_content">
            </TextView>
            <ImageView
                android:id="@+id/remove_button"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:layout_width="25dp"
                android:src="@drawable/ic_cancel_black_24dp"
                android:layout_height="30dp">
            </ImageView>
            <TextView

                android:layout_below="@+id/cart_prod_name"
                android:id="@+id/cart_prod_des"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:text="Hellow"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_below="@id/cart_prod_des"
                android:id="@+id/cart_prod_price"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:text="Hellow"
                android:layout_height="wrap_content">
            </TextView>
        </RelativeLayout>

    </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>