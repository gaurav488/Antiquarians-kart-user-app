<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/search_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/search_prodimg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:maxHeight="200dp"
                android:src="@drawable/hammerauct" />
            <TextView
                android:id="@+id/search_product_name2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_below= "@id/search_prodimg"
                android:layout_marginTop="15dp"
                android:text="Hellow"
                />
            <TextView
                android:id="@+id/search_product_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/search_product_name2"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="Hellow"
                />
            <TextView
                android:id="@+id/search_product_amt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/search_product_desc"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="Bid now"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>