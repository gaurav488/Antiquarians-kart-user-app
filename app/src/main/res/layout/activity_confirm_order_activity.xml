<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".confirm_order_activity">
    <TextView
        android:id="@+id/confirm_text"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please Enter Your Shipment Details"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        >
    </TextView>
    <EditText
        android:layout_marginStart="10dp"
        android:id="@+id/confirm_order_name"
        android:layout_marginTop="110dp"
        android:hint="Your Name"
        android:inputType="text"
        android:layout_below="@id/confirm_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </EditText>
    <EditText
        android:layout_marginStart="10dp"
        android:hint="Your Phone Number"
        android:id="@+id/orderers_Phone_number"
        android:layout_marginTop="10dp"
        android:inputType="phone"
        android:layout_below="@id/confirm_order_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </EditText>
    <EditText
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:hint="Your Home Address"
        android:id="@+id/orderers_address"
        android:inputType="textMultiLine"
        android:layout_marginTop="10dp"
        android:layout_below="@id/orderers_Phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </EditText>
    <EditText
        android:id="@+id/orderers_cityname"
        android:hint="Your city Name"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:inputType="text"
        android:layout_below="@id/orderers_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </EditText>
    <Button
        android:id="@+id/proceed_payment"
        android:layout_margin="10dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:text="Confirm Order"
        android:background="@drawable/rectage2"
        android:layout_height="wrap_content">
    </Button>

</RelativeLayout>